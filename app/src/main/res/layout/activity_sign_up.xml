<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/tvfun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tv_sign_up_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:text="Register Here"/>

    <EditText
        android:id="@+id/et_sign_up_1"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:hint="Name"
        android:background="@drawable/custom_edittext"
        android:textColorHint="#E8FFF7F7"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/et__sign_up_2"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/et__sign_up_2"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:hint="Email"
        android:background="@drawable/custom_edittext"
        android:textColorHint="#E8FFF7F7"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/et__sign_up_3"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et__sign_up_3"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/custom_edittext"
        android:hint="Pass"
        android:textColorHint="#E8FFF7F7"
        android:layout_above="@id/tvfun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_sign_up_1"
        android:text="Register"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="@drawable/custom_button"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvfun"/>

    <TextView
        android:id="@+id/tv_goto_login"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Already Registered? Login Here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>